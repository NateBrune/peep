<?xml version='1.0' encoding='utf-8'?>
<widget id="com.peep.steem" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>peep</name>
    <description>
        An application to browse the prettier side of steem.
    </description>
    <author email="natebrune@gmail.com" href="http://steemit.com/@picokernel">
      Nate Brune - Developer and Student
    </author>
    <content src="index.html" />
    <icon src="www/assets/icon.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
